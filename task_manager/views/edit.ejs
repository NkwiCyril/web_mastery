<%- include("partials/header.ejs") %>
<body>
  <header class="welcome">
    <h1>Update Task</h1>
  </header>
  <section class="container">
    <div class="form">
      <form action="/edit/<%= todo.id %>" method="POST">
        <input
          type="text"
          name="content"
          required
          placeholder="Input task"
          value="<%= todo.content %>"
          autocomplete="off"
        />
        <select name="status" id="status" title="Add task status" required>
          <option value="">Status</option>
          <option value="todo">To Do (Not Started)</option>
          <option value="inprogress">In Progress (Started)</option>
          <option value="done">Done (Complete)</option>
        </select>
        <button type="submit" title="update task" class="add-button">
          <span class="material-symbols-outlined add_task"> restart_alt </span>
        </button>
      </form>
    </div>
  </section>
</body>

