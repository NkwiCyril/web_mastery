<%- include("partials/header.ejs") %>

<div class="form-container">
  <form action="/section2" method="post">
    <% questions.forEach(question => { %>

    <h3><%=question["question"]%></h3>
    <div class="option">
      <input type="radio" name="<%=question["question"]%>" value="<%=
      question["options"][0] %>" required />
      <label for="option-0"><%= question["options"][0] %></label>
    </div>
    <div class="option">
      <input type="radio" name="<%=question["question"]%>" value="<%=
      question["options"][1] %>" required />
      <label for="option-1"><%= question["options"][1] %></label>
    </div>
    <div class="option">
      <input type="radio" name="<%=question["question"]%>" value="<%=
      question["options"][2] %>" %> required />
      <label for="option-2"><%= question["options"][2] %></label>
    </div>
    <div class="option">
      <input type="radio" name="<%=question["question"]%>" value="<%=
      question["options"][3] %>" required />
      <label for="option-3"><%= question["options"][3] %></label>
    </div>

    <% }); %>

    <div class="call-to-action">
      <input type="reset" value="Clear" />
      <input type="submit" value="Next" />
    </div>
  </form>
  <%- include("partials/footer.ejs") %>
</div>
