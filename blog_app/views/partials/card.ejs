<div class="card my-2" style="width: 20rem">
  <img src="images/bchain0.jpg" class="card-img-top " alt="blog image" />
  <div class="card-body">
    <h5 class="card-title"><%= title %></h5>
    <p class="card-text">
      <% if(content.length > 100) { %>
        <%= content.slice(0, 100) + "..." %>
      <% } else { %>
        <%= content %>
      <% } %>
      
    </p>
    <p class="text-secondary"><%= dateCreated %></p>
    <a href="/view" class="btn btn-dark my-1">Read</a>
    <a href="/edit" class="btn btn-dark mx-1">Edit</a>
  </div>
</div>
